<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:padding="10dp"
    android:background="@drawable/shape_curved_white2">

    <TextView
        android:id="@+id/tv_code"
        android:text="211ر"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:paddingHorizontal="10dp"
        android:paddingVertical="18dp"
        android:textSize="16sp"
        android:background="@drawable/shape_curved_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_name"
        app:layout_constraintHorizontal_bias="1"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="رياضيات متقطعه"
        app:layout_constraintEnd_toStartOf="@+id/tv_code"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="@+id/tv_code"
        app:layout_constraintBottom_toBottomOf="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>